
    <head>
        <style>
            .fecha {border-radius: 5px; float: right; margin: 0px 8px; border-style: solid; border-width: 1px;}
        </style>
    </head>

    <body>
     <!--  <div class="fecha">
            <label class="Entrega">Entrega: 0-00-0000</label>
        </div>
        --> 
        <div  style="margin: 5em; margin-top: 3%; " class="container">
            
            <!--Temporizador para fecha de envio-->
            <h1 style=" text-align: center;">Transferencias</h1>
           
                           
            <label class="form-label">Nombre de la actividad: </label>   
            <input type="text" placeholder="<%=results[0].idActividad%> <%=results[0].nombre%>" style="border: 0; width: 100%;" readonly>
            <table id="tabla" class="table table-hover" >
                <thead>
                    <th scope="col">Transferencia</th>
                    <th scope="col">Motivo</th>
                    <th scope="col">Justificaci√≥n</th>
                    <th scope="col">Fecha</th>
                    <th scope="col"></th>
                </thead>
                <tbody>
                    <%
                    
                    results.forEach((transferencias)=>{ %>
                        <tr>
							
							<td> <%= transferencias.id %></td>
							
                            <td> <%= transferencias.Motivo %></td>

                            <td> <%= transferencias.Justificacion %></td>

                            <td> <%= transferencias.Fecha %></td>
                            <% if (transferencias.id){ %>
                            <td>
                                <a href="/eliminarTransferencia/<%=transferencias.id %>"><i class='bx bx-message-square-x bx-sm' style="color: #91133C;"></i></a>    
    
								<a target="_blank" href="/reporteTransferencia/<%=transferencias.id %>" type="button" class="btn btn-success btn-block" style="background-color:#91133C"><i class="bi bi-printer-fill"></i> Imprimir</a>
                            </td>
                            <% }
                            
                            %>
                        </tr>
                    <% }) 
                    
                    %>
					
                </tbody>
            </table>
            <div class="form-group" style="text-align: right">
                <a href="/nuevaTransferencia/<%=results[0].idActividad%>" type="button" class="btn btn-success btn-block "style="background-color:#91133C;"><i class='bx bxs-plus-circle bx-xs'></i> Nueva Transferencia </a>
            </div>
        </div>
    </body>