<body>
    <!--CUERPO DE LA PAGINA-->
    <div style="color:#fff">.</div>
    <div class="cointainer">
        <div class="row">
            <div class="col-md-9 offset-md-1">
                <h2>REGISTRO DE NUEVO ARTICULO EN LA BASE DE DATOS</h2>
            </div>
                <div class="col-md-8 offset-md-1">
                    <h6>Ingresa los datos necesarios para el registro del árticulo dentro de la base de datos.</h6>
                </div>
        </div>
    </div>
    <div class="cointainer p-5 ">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card">
                    <div class="card-body">
                        <form action="/agregarArticulo" method="POST" enctype="multipart/form-data" class="row">
                            <!--Nombre del Bien-->
                            <div class="form-group col-6">
                                <h6>NOMBRE DEL BIEN</h6>
                                <input type = "text" name="nombreBien" placeholder="Nombre del Bien" class="form-control">
                            </div>
                            <!--Numero de Inventario-->
                            <div class="form-group col-6">
                                <h6>NÚMERO DE INVENTARIO UPP</h6>
                                <input type = "text" name="numInventario" placeholder="Número de Inventario" class="form-control">
                            </div>
                            <!--Clave de control-->
                            <h6>CLAVE DE CONTROL</h6>
                            <div class="form-group col-1">
                                <select name="clvControl2" class="form-control">
                                    <option value="si">SI</option>
                                    <option value="no">NO</option>
                                </select>
                            </div>
                            <div class="form-group col-5">
                                <input type = "text" name="clvControl" placeholder="Clave de Control" class="form-control">
                            </div>

                            <!--Marca-->
                            <div class="form-group col-6">
                                <h6>MARCA</h6>
                                <input type = "text" name="marca" placeholder="Marca" class="form-control">
                            </div>

                            <!--Modelo-->
                            <div class="form-group col-6">
                                <h6>MODELO</h6>
                                <input type = "text" name="modelo" placeholder="Modelo" class="form-control">
                            </div>

                            <!--Tipo de Alta-->
                            <div class="form-group col-6">
                                <h6>TIPO DE ALTA</h6>
                                <select name="tipoAlta" class="form-control">
                                    <option value="Compra">COMPRA</option>
                                    <option value="Donación">DONACIÓN</option>
                                    <option value="Reposición">REPOSICIÓN</option>
                                    <option value="Permutar">PERMUTAR</option>
                                    <option value="Comodato">COMODATO</option>
                                </select>
                            </div>

                             <!--Costo de Adquisición-->
                             <div class="form-group col-6">
                                <h6>COSTO DE ADQUISICIÓN</h6>
                                <input type = "text" name="costoAdquisicion" placeholder="Costo de Adquisición" class="form-control">
                            </div>

                            <!--Numero de Factura-->
                            <div class="form-group col-6">
                                <h6>Número de Factura</h6>
                                <input type = "text" name="numFactura" placeholder="Número de Factura" class="form-control">
                            </div>

                            <!--Descripción del Bien-->
                            <div class="form-group col-6">
                                <h6>DESCRIPCIÓN DEL BIEN</h6>
                                <textarea name="descripcion" class="form-control" placeholder="Description"></textarea>
                            </div>


                            <!--Subir Foto-->
                            <div class="col-6">
                                <h6>FOTO DEL ARTICULO</h6>
                                <div class="input-group mb-3 form-group">
                                    <input type="file" name="image" class="form-control" id="inputGroupFile02">
                                </div>
                            </div>
                            <div class="form-group"style="text-align: right">
                                    <button type="submit" class="btn btn-success btn-block"style="background-color:#91133C">
                                        <i class="bi bi-device-ssd-fill"></i> Subir
                                    </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>  


</body>

</html>
